{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <a role="button" class="btn btn-primary btn-sm" href="{{ path('team_index') }}">Back to the list</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <img src="http://www.countryflags.io/{{ team.country.code }}/shiny/64.png" alt="">
            <h2>{{ team.country.name }} - {{ team.name }}</h2>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-12">
            <p>{{ team.description }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <ul>
                {% for player in players %}
                    <li><a href="{{ path('athlete_show', { 'id': player.id }) }}">{{ player }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-9">
            <div class="float-right">
                <img src="http://www.countryflags.io/be/shiny/64.png" alt="">
            </div>
        </div>
    </div>

    <hr>
    <h2>Derniers r√©sultats</h2>

    <p><img src="http://www.countryflags.io/be/shiny/32.png" alt="">Team1 Vs Team2<img
                src="http://www.countryflags.io/pt/shiny/32.png" alt=""></p>

    <a role="button" class="btn btn-primary" href="{{ path('team_index') }}">Back to Teams</a>
    <a role="button" class="btn btn-primary" href="{{ path('team_edit', { 'id': team.id }) }}">Edit</a>

    {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
    {{ form_end(delete_form) }}

{% endblock %}
