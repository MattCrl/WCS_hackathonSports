{% extends 'admin_base.html.twig' %}

{% block pageheader %}
    <h2>Teams</h2>

{% endblock %}


{% block body %}



    <div class="row">
        {% for team in teams %}
            <div class="col-4">
                <div class="card">
                    <div class="card-body text-center">
                        <a href="{{ path('team_show', { 'id': team.id }) }}" class="card-link">
                            <div >

                                <img src="http://www.countryflags.io/{{ team.country.code }}/shiny/64.png" alt="">
                            </div>
                            {{team.name}}</a>
                        <hr>
                        <p class="fixP">
                            <a role="button" class="btn btn-info" href="{{ path('admin_team_show', { 'id': team.id }) }}">See more</a>
                            <a role="button" class="btn btn-warning" href="{{ path('admin_team_edit', { 'id': team.id }) }}">Edit</a>
                        </p>
                    </div>
                </div>
            </div>
        {% else %}
            No teams Yet
        {% endfor %}
    </div>

    <p>
        <a class="btn btn-success" href="{{ path('admin_team_new') }}">Create a new team</a>
    </p>

{% endblock %}



