{% extends 'base.html.twig' %}

{% block pageheader %}
  <h2>Teams</h2>

{% endblock %}


{% block body %}



    <div class="row">
        {% for team in teams %}
            <div class="col-4">
                <div class="card">
                    <div class="card-body text-center">
                        <a href="{{ path('team_show', { 'id': team.id }) }}" class="card-link">
                        <div >

                            <img src="http://www.countryflags.io/{{ team.country.code }}/shiny/64.png" alt="">
                        </div>

                        {{team.name}}</a>
                    </div>
                </div>
            </div>
        {% else %}
            No teams Yet
        {% endfor %}
    </div>
{% endblock %}


