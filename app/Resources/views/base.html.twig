<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>

    <title>{% block title %}Aquapony race World CUP{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('build/style.css') }}">
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.png') }}"/>
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet"> <body>
<nav class="navbar navbar-expand-sm bg-primary navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="{{ path('homepage') }}">

            <img width="100" src="{{ asset('images/logo.png') }}"></a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            {% set route = app.request.get('_route') %}
            <ul class="navbar-nav">
                <li class="nav-item {{ route == 'homepage' ? 'active' }}">
                    <a class="nav-link" href="{{ path('homepage') }}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item {{ route starts with 'team' ? 'active' }}">
                    <a class="nav-link" href="{{ path('team_index') }}">Teams</a>
                </li>
                <li class="nav-item {{ route starts with 'athlete' ? 'active' }}">
                    <a class="nav-link" href="{{ path('athlete_index') }}">Athletes</a>
                </li>
                <li class="nav-item {{ route starts with 'tournament_last' ? 'active' }}">
                    <a class="nav-link" href="{{ path('tournament_last_show') }}">Tournament</a>
                </li>
                <li class="nav-item {{ route starts with 'tournament_i' or route starts with 'tournament_s' ? 'active' }}">
                    <a class="nav-link" href="{{ path('tournament_index') }}">Archives</a>
                </li>
            </ul>

        </div>
    </div>

</nav>


<div class="page-header">
        {% block pageheader %}{% endblock %}

</div>

<div class="">
    {% block fluid %}{% endblock %}
</div>

<div class="container">
    {% block body %}{% endblock %}
</div>


<script src="{{ asset('build/app.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
