{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <a role="button" class="btn btn-primary btn-sm" href="{{ path('athlete_index') }}">Back to the list</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <h2>{{ athlete }}</h2>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-9">
            {% if athlete.birthdate %}
                <div>
                    <span class="font-weight-bold">BirthDate</span>: {{ athlete.birthdate|date('d-m-Y') }}
                </div>
            {% endif %}
            <div>
                <span class="font-weight-bold">Biography</span>: {{ athlete.biography }}
            </div>
        </div>

        <div class="col-3">
            {% if athlete.image %} <img class="img-fluid" src="{{ asset('images/') }}{{ athlete.image }}">{% endif %}
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('athlete_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('athlete_edit', { 'id': athlete.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
