{% extends 'admin_base.html.twig' %}

{% block body %}
    <div class="row">
        <h1>Athletes</h1>
    </div>
    <div class="row">
        {% for athlete in athletes %}
            <div class="col-3">
                <div class="card">
                    <div class="card-body text-center">
                        <img class="img-fluid" src="{{ asset('images/')}}{{ athlete.image }}">
                        <hr>
                        <h4 class="card-title">{{ athlete }}</h4>
                        <a role="button" class="btn btn-info" href="{{ path('admin_athlete_show', { 'id': athlete.id }) }}">See more</a>
                        <a role="button" class="btn btn-warning" href="{{ path('admin_athlete_edit', { 'id': athlete.id }) }}">Edit</a>
                    </div>
                </div>
            </div>
        {% else %}
            No athletes yet
        {% endfor %}
    </div>

    <p>
        <a class="btn btn-success" href="{{ path('admin_athlete_new') }}">Add a new athlete</a>
    </p>

{% endblock %}
